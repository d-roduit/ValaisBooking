@model DataTransferObject.Reservation

@{
    ViewData["Title"] = "Index";
}


<div>
    <h3 class="text-center mt-5 mb-5">Search my reservation</h3>

    <br /><br />
    <div class="alert alert-danger col-4 mx-auto" asp-validation-summary="ModelOnly">

    </div>

    <form asp-controller="Reservation" asp-action="Index" method="POST" class="col-4 border border-secondary p-4 mx-auto rounded bg-light shadow-lg">
        <div class="form-group">
            <label asp-for="ReservationNumber"></label>
            <input asp-for="ReservationNumber" class="form-control">
            <span asp-validation-for="ReservationNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Firstname"></label>
            <input asp-for="Firstname" class="form-control">
            <span asp-validation-for="Firstname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Lastname"></label>
            <input asp-for="Lastname" class="form-control">
            <span asp-validation-for="Lastname" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Search</button>
    </form>
</div>
