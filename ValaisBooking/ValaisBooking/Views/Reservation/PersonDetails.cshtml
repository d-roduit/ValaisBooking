@{
    ViewData["Title"] = "PersonDetails";
}

<div>
    <h3 class="text-center mt-5 mb-5">It is your first reservation ? Fill in your personal information !</h3>

    <br /><br />

    <form asp-controller="Reservation" asp-action="PersonSession" method="POST" class="col-4 border border-secondary p-4 mx-auto rounded bg-light shadow-lg">
        <div class="form-group">
            <label>Firstname</label>
            <input type="text" name="firstname" class="form-control">
        </div>
        <div class="form-group">
            <label>Lastname</label>
            <input type="text" name="lastname" class="form-control">
        </div>
        <input type="hidden" name="idRoom" value="@ViewData["idRoom"]" />

        <button type="submit" class="btn btn-primary w-100">Ok</button>
    </form>
</div>

