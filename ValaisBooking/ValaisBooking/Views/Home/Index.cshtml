@model SearchHotelsViewModel

@{ ViewData["Title"] = "Home Page"; }

@section Scripts
{
    <script type="text/javascript" src="~/js/Home/Index.js" asp-append-version="true"></script>
}

<div>
    <h3 class="text-center mt-5 mb-5">Find the best deals in Valais and much more ...</h3>

    <br /><br />

    <form asp-controller="Home" asp-action="Index" method="POST" class="col-4 border border-secondary p-4 mx-auto rounded bg-light shadow-lg">
        <div class="form-group">
            <label asp-for="Destination"></label>
            <input asp-for="Destination" class="form-control" required>
            <span asp-validation-for="Destination" class="text-danger"></span>
        </div>
        <div class="form-row">
            <div class="form-group col-6">
                <label asp-for="CheckIn"></label>
                <input asp-for="CheckIn" class="form-control" required>
                <span asp-validation-for="CheckIn" class="text-danger"></span>
            </div>

            <div class="form-group col-6">
                <label asp-for="CheckOut"></label><br>
                <input asp-for="CheckOut" class="form-control" required>
                <span asp-validation-for="CheckOut" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary w-100">Search</button>
    </form>
</div>
